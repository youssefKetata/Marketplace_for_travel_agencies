{% extends 'admin/base_admin.html.twig' %}

{% block title %} {{ offer.name }} - Offer Product Types {% endblock %}

{% block container %}
    <h1 class="text-start fs-2 bold my-2 mb-3"></h1>
    <br>
    <div class="text-start m-lg-4">
        <a class="btn btn-success" href="{{ path('app_offer_product_new') }}">Cr√©er nouveau</a>
    </div>
    <div>

        <table class="table align-middle mb-0 bg-white shadow-lg " data-search= "true"
               data-toggle="table"  data-pagination="true"
               data-show-pagination-switch="true" data-show-columns="true" >
            <thead class="bg-secondary text-white">
            <tr>
                <th scope="col-2" >ID</th>
                <th scope="col-2">Price</th>
                <th scope="col-2">MaxItems</th>
                <th scope="col-2">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for offerProductType in offer.offerProductTypes %}
                <tr>

                    <div class="d-flex align-items-center">

                        <td>{{ offerProductType.id }}</td>
                        <td>{{ offerProductType.price }} - </td>
                        <td>{{ offerProductType.maxItems }}</td>

                        <td>


                            <button
                                    class="btn btn-link btn-rounded btn-sm fw-bold btn-info btn-sm"
                                    data-action="modal-form#openModal"
                                    data-form-url-value="{{ path('app_offer_product_show', {'id': offerProductType.id}) }}"
                                    data-node-dest-id-value="myOneCustomContent"
                                    data-refresh-key-value="refresh-html">
                                <i class="fas fa-eye"></i> View
                            </button>




                            <button
                                    class=" btn btn-link btn-rounded btn-sm fw-bold btn-success btn-sm"
                                    data-action="modal-form#openModal"
                                    data-form-url-value="{{ path('app_offer_product_edit', {'id': offerProductType.id}) }}"
                                    data-url-value="{{ path('app_offer_product_index', { ajax: 1 } ) }}"
                                    data-node-dest-id-value="myOneCustomContent"
                                    data-refresh-key-value="refresh-html">
                                <i class="fas fa-edit"></i> Edit
                            </button>
                            <button
                                    class=" btn btn-link btn-rounded btn-sm fw-bold btn-danger btn-sm"
                                    data-action="modal-form#openModal"
                                    data-form-url-value="{{ path('app_offer_product_delete', {'id': offerProductType.id}) }}"
                                    data-url-value="{{ path('app_offer_product_index', { ajax: 1 } ) }}"
                                    data-node-dest-id-value="myOneCustomContent"
                                    data-refresh-key-value="refresh-html">
                                <i class="bi bi-trash"></i> Delite
                            </button>


                        </td>
                    </div>
                </tr>

                </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}
