{% for offer in offers %}
    <tr>
        <td>{{ offer.id }}</td>
        <td>{{ offer.name }}</td>
        <td>{{ offer.nbProductTypes }}</td>
        <td>{{ offer.nbDays }}</td>
        <td>{% for offerProductType in offer.offerProductTypes %}
                <button
                        class="btn btn-primary btn-sm"
                        data-action="modal-form#openModal"
                        data-form-url-value="{{ path('app_offer_product_type_edit',{'id': offerProductType.id } ) }}"
                        data-url-value="{{ path('app_offer_product_type_index', { ajax: 1 } ) }}"
                        data-node-dest-id-value="myOneCustomContent"
                        data-modal-title-value="{{ 'Buttons.Custom.Nouveau.Continent'|trans }}"
                        data-refresh-key-value="refresh-html">
                    {{ offerProductType.productType.name }}
                </button>
            {% endfor %}
            <button
                    class="btn btn-soft-success btn-sm"
                    data-action="modal-form#openModal"
                    data-form-url-value="{{ path('app_offer_product_type_new') }}"
                    data-url-value="{{ path('app_offer_product_type_index', { ajax: 1 } ) }}"
                    data-node-dest-id-value="myOneCustomContent"
                    data-modal-title-value="{{ 'Buttons.Custom.Nouveau.Continent'|trans }}"
                    data-refresh-key-value="refresh-html">
                <i class="fe-plus-circle"></i>
            </button>
        </td>
        <td>
            <a href="{{ path('app_offer_show', {'id': offer.id}) }}">show</a>
            <a href="{{ path('app_offer_edit', {'id': offer.id}) }}">edit</a>
        </td>
    </tr>
{% else %}
    <tr>
        <td colspan="5">no records found</td>
    </tr>
{% endfor %}