{% block pagetitle %}Offers{% endblock %}

{% block container %}
    <div>
    <button
            class="btn btn-primary btn-sm"
            data-action="modal-form#openModal"
            data-form-url-value="{{ path('app_offer_product_type_new',{'id': offer.id}) }}"
            data-url-value="{{ path('app_offer_product_type_index', { ajax: 1 } ) }}"
            data-node-dest-id-value="myOneCustomContent"
            data-modal-title-value="{{ 'Buttons.Custom.Nouveau.Continent'|trans }}"
