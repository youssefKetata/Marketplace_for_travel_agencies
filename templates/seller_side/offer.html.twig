                    <div class="row ">
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger">
                                {{ message }}
                            </div>
                        {% endfor %}
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}
                        {% for offer in offers %}
                            <div class="col-lg-4 col-md-6 col-sm-12 col-12">
                                <div class="top_service_boxed wallet_area_boxed" >
                                    <a href="#">
                                        <h4 class="text-start">{{ offer.name }} </h4>
                                        <div class="wallet_boxed_flex d-block text-start m-0">
                                            <div class="wallet_blance_boxed ">
                                                <p class="m-2">Nombre Of Days <span class="fst-italic text-primary"> {{ offer.nbDays }}</span></p>

