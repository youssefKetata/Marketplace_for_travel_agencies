{% extends 'admin/base_admin.html.twig' %}

{% block title %}Product Type List{% endblock %}

{% block container %}
    <button
            class="btn btn-success btn-sm"
            data-action="modal-form#openModal"
            data-form-url-value="{{ path('app_product_type_new' ) }}"
            data-url-value="{{ path('app_product_type_index', { ajax: 1 } ) }}"
            data-node-dest-id-value="myOneCustomContent"
            data-modal-title-value="New Product Type"
            data-refresh-key-value="refresh-html"
    >
        <i class="bi bi-plus-lg">&nbsp;</i>New
    </button>
    <div>

        <table class="table align-middle mb-0 bg-white shadow-lg " data-search= "true"
               data-toggle="table"  data-pagination="true" data-page-size="10"
               data-show-pagination-switch="true" data-show-columns="true" >
            <thead class="bg-secondary text-white">
            <tr>
                <th class="th-sm">ID</th>
                <th class="th-sm">Nom</th>
                <th class="th-sm">Actions</th>
            </tr>
            </thead>
            <tbody data-reload-content-target="myOneCustomContent">
            {{ include('product_type/_list.html.twig') }}
            </tbody>
        </table>
    </div>


{% endblock %}
