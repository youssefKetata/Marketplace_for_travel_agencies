        <td>
    {% if seller.api is null %}
    <button
            class="btn btn-primary btn-sm"
            data-action="modal-form#openModal"
            data-form-url-value="{{ path('app_api_new',{'seller':seller.id}) }}"
            data-url-value="{{ path('app_seller_index', {'seller':seller.id, ajax: 1 } )  }}"
            data-node-dest-id-value="seller"
            data-modal-title-value="New api"
            data-refresh-key-value="refresh-html">
        Create api
    </button>
    {% else %}
        {#                                        modify api#}
        <button
                class="btn btn-success btn-sm"
                data-action="modal-form#openModal"
                data-form-url-value="{{ path('app_api_edit', {'id':seller.api.id}) }}"
                data-url-value="{{ path('app_seller_index', {'seller':seller.id, ajax: 1 }) }}"
                data-node-dest-id-value="seller"
                data-modal-title-value="Edit api"
                data-refresh-key-value="refresh-html">
            Edit api
        </button>
    {% endif %}
        </td>
    </tr>
{% else %}
    <tr>
        <td colspan="5">no records found</td>
    </tr>
