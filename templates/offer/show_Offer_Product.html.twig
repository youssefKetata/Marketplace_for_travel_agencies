{% extends 'admin/base_admin.html.twig' %}

{% block title %} {{ offer.name }} - Offer Product Types {% endblock %}

{% block container %}
    <div class="card container shadow mt-5" >
        <div>
            <a href="{{ path('app_offer_product_new') }}" class="btn btn-sm btn-success" style="position: relative; top: 90px; left: 20px">
                <i class="fas fa-plus-circle m-1">  New Offer</i>
            </a>

            <div class="card-tools text-center">
                <h1 class="card-title fs-4 font-italic" style="font-weight: bold;"><ins>{{ offer.name }} - Offer Product Types</ins></h1>

            </div>
        </div>
        <div class="card-body table-responsive p-3 text-center">
            <table class="table"  data-search= "true"
                   data-toggle="table"  data-pagination="true" data-page-size="10"
                   data-show-pagination-switch="true" data-show-columns="true">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Price</th>
                    <th scope="col">Max Items</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody data-reload-content-target="myOneCustomContent">
                {% for offerProductType in offer.offerProductTypes %}
                    <tr>

                        <div class="d-flex align-items-center">

                            <td>{{ offerProductType.id }}</td>
                            <td>{{ offerProductType.price }} - </td>
                            <td>{{ offerProductType.maxItems }}</td>
                            <td>


                                <button
                                        class="btn btn-link"
                                        data-action="modal-form#openModal"
                                        data-form-url-value="{{ path('app_offer_product_delete', {'id': offerProductType.id}) }}"
                                        data-url-value="{{ path('app_offer_product_index', { ajax: 1 } ) }}"
                                        data-node-dest-id-value="myOneCustomContent"
                                        data-refresh-key-value="refresh-html">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash-fill text-dark" viewBox="0 0 16 16">
                                        <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"/>
                                    </svg>
                                </button>

                                <button
                                        class=" btn btn-link "
                                        data-action="modal-form#openModal"
                                        data-form-url-value="{{ path('app_offer_product_edit', {'id': offerProductType.id}) }}"
                                        data-url-value="{{ path('app_offer_product_index', { ajax: 1 } ) }}"
                                        data-node-dest-id-value="myOneCustomContent"
                                        data-refresh-key-value="refresh-html">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil-square text-dark" viewBox="0 0 16 16">
                                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                    </svg>
                                </button>



                                <button
                                        class="btn btn-link"
                                        data-action="modal-form#openModal"
                                        data-form-url-value="{{ path('app_offer_product_show', {'id': offerProductType.id}) }}"
                                        data-node-dest-id-value="myOneCustomContent"
                                        data-refresh-key-value="refresh-html">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-zoom-in text-dark" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z"/>
                                        <path d="M10.344 11.742c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1 6.538 6.538 0 0 1-1.398 1.4z"/>
                                        <path fill-rule="evenodd" d="M6.5 3a.5.5 0 0 1 .5.5V6h2.5a.5.5 0 0 1 0 1H7v2.5a.5.5 0 0 1-1 0V7H3.5a.5.5 0 0 1 0-1H6V3.5a.5.5 0 0 1 .5-.5z"/>
                                    </svg>
                                </button>



                            </td>

                        </div>
                    </tr>

                    </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


{% endblock %}



