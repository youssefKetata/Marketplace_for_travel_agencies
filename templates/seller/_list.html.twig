{% for seller in sellers %}
    <tr>
        <td>{{ seller.id }}</td>
        <td>{{ seller.name }}</td>
        <td>{{ seller.user.email }}</td>
        <td>{{ seller.website }}</td>
        <td>{{ seller.address }}</td>
        <td>

{#            <button#}
{#                    class=" btn btn-link btn-rounded btn-sm fw-bold btn-success btn-sm"#}
{#                    data-action="modal-form#openModal"#}
{#                    data-form-url-value="{{ path('app_seller_edit', {'id': seller.id}) }}"#}
