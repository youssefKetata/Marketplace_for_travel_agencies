{% extends 'base.html.twig' %}

{% block title %}Seller{% endblock %}

{% block body %}
{#    <h1>Seller</h1>#}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ seller.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ seller.name }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ seller.website }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ seller.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ seller.city }}</td>
            </tr>
            <tr>
                <th>user</th>
                <td>{{ seller.user }}</td>
            </tr>
            <tr>
                <th>API</th>
                <td>
                {% if seller.api is not null %}
                    {{ seller.api }}
                {% else %}
                    {{ seller.name }} does not have an API
                {% endif %}
                </td>
            </tr>
        </tbody>
    </table>
    {{ include('seller/_delete_form.html.twig') }}
{% endblock %}
