{% for product_type in product_types %}
    <tr>

        <div class="d-flex align-items-center">

            <td>{{ product_type.id }}</td>
            <td>{{ product_type.name }}</td>

            <td>
                <button
                        class="btn btn-link btn-rounded btn-sm fw-bold btn-info btn-sm"
                        data-action="modal-form#openModal"
                        data-form-url-value="{{ path('app_product_type_show', {'id': product_type.id}) }}"
                        data-node-dest-id-value="myOneCustomContent"
                        data-refresh-key-value="refresh-html">
                    <i class="fas fa-eye"></i> View
                </button>


                <button
                        class=" btn btn-link btn-rounded btn-sm fw-bold btn-success btn-sm"
                        data-action="modal-form#openModal"
                        data-form-url-value="{{ path('app_product_type_edit', {'id': product_type.id}) }}"
                        data-url-value="{{ path('app_product_type_index', { ajax: 1 } ) }}"
                        data-node-dest-id-value="myOneCustomContent"
                        data-refresh-key-value="refresh-html">
                    <i class="fas fa-edit"></i> Edit
                </button>
                <button
                        class="btn btn-link btn-rounded btn-sm fw-bold btn-danger btn-sm"
                        data-action="modal-form#openModal"
                        data-form-url-value="{{ path('app_product_type_delete', {'id': product_type.id}) }}"
{#                        data-url-value="{{ path('app_product_type_index', { ajax: 1 } ) }}"#}
                        data-node-dest-id-value="myOneCustomContent"
                        data-refresh-key-value="refresh-html">
                    <i class="fas fa-trash-alt"></i>Delete
                </button>



                <a class="btn btn-info btn-sm" href="{{ path('offerProductTypes_ProductType' , {'id': product_type.id}) }}">View Offres</a>
            </td>
        </div>
    </tr>

    </td>
    </tr>
{% else %}
    <tr>
        <td colspan="3">no records found</td>
    </tr>
{% endfor %}