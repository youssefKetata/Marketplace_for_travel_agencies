                        <a class="btn btn-dark" href="{{ path('app_offer_product_type_show', {'id': offerProductType.id}) }}"><i class="fas fa-eye"></i></a>
                        <a class="btn btn-primary" href="{{ path('app_offer_product_type_edit', {'id': offerProductType.id}) }}"><i class="fas fa-edit"></i></a>
                        <a class="btn btn-danger" href="{{ path('app_offer_product_type_delete', {'id': offerProductType.id}) }}"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
        <div class="text-end">

        </div>
    </div>

